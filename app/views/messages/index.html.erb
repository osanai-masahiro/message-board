<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>
<br>
<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    
    <div class="row">
    <label for = "message_name" class= "control-rabel col-md-1">名前:</label>
    <div class = "col-md-4">
        <%= f.text_field :name,class: "form-control",placeholder: "名前を入力してください。"  %>
    </div>
    </div>
    
    <br>
    <br>
    
    <div class ="row">
    <label for ="message_body" class ="control-rabel col-md-1">投稿:</label>
        <div class = "col-md-4">
        <%= f.text_area :body ,class: "form-control", placeholder: "投稿内容を書き込んで下さい。",rows: "4" %>
        </div>
    </div>
    
  </div>
    <%= f.submit class: "btn btn-large btn-success" ,style: "margin-left:240px;"%>
<% end %>

