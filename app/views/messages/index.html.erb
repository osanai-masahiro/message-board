<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
  名前:
  <br>
  <%= f.text_field :name,class: "form-control",placeholder: "名前を入力してください。" ,style: "width:350px;" %>
  <br>
  内容:
  <%= f.text_area :body ,class: "form-control", placeholder: "投稿内容を書き込んで下さい。",rows: "4" %>
  <br>
  <%= f.submit class: "btn btn-large btn-success" %>
<% end %>