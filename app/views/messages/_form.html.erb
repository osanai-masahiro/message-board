
<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
    <div class="form-group">
        <label for = "message_name" class= "control-rabel col-md-1">名前:</label>
        <div class = "col-md-4">
          <%= f.text_field :name,class: "form-control",placeholder: "名前を入力してください。"  %>
        </div>
    </div>
    
    <br>
    <br>
    
    <div class="form-group">
        <label for ="message_body" class ="control-rabel col-md-1">投稿:</label>
        <div class = "col-md-4">
        <%= f.text_area :body ,class: "form-control", placeholder: "投稿内容を書き込んで下さい。",rows: "4" %>
        </div>
    </div>
    
    <div class ="form-group">
    <%= f.submit class: "btn btn-large btn-success " ,style: "margin-left:240px;"%>
    </div>
<% end %>


